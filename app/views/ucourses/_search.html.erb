<% if @ucourse.blank? %>
<p>There are no courses containing the term(s)
    <%= params[:search] %>
    .</p>
<% else %>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Code</th>
            <th>Requirements</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @ucourse.each do |course| %>
        <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= course.code %></td>
            <td><%= course.requirements %></td>
            <td><%= button_to "Enroll", { action: "enroll", id: course.id, name: course.name }
                                %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>
