<% provide(:title, 'Search Courses') %>

<%= form_tag(ucourses_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>

<% if @ucourse.blank? %>
<p>There are no courses containing the term(s)
    <%= params[:search] %>.</p>
<% else %>
<% if logged_in? %>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Code</th>
            <th>Credits</th>
            <th>Requirements</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @ucourse.each do |course| %>
        <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= course.code %></td>
            <td><%= course.credits %></td>
            <td><%= course.requirements %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<% else %>
<h2>You must log in or sign up first</h2>

<% end %>

<% end %>
