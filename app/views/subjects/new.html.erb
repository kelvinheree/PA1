<% provide(:title, 'Subjects') %>
<h1>Subjects</h1>
<% if logged_in? %>
  <table>
    <thead>
      <tr>
        <th>Subject Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @subject.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>You must log in or sign up first</h2>

<% end %>
